<Window x:Class="Second.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Second"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

        <Style TargetType="Button">

            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="25"/>

        </Style>
        

    </Window.Resources>

    <Grid>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="База данных 'Больница'"
                       HorizontalAlignment="Center"
                       FontSize="28"
                       Margin="0 0 0 10"
                       Foreground="#FF117AD6"/>

            <Button Content="Таблица 'Болезни'" Click="Button_Click"/>

            <Button Content="Таблица 'Должности'" Click="Button_Click_1"/>

            <Button Content="Таблица 'Лекарства'" Click="Button_Click_2"/>

            <Button Content="Таблица 'Пациенты'" Click="Button_Click_3"/>
            <Button Content="Таблица 'Сотрудники'" Click="Button_Click_4" />

        </StackPanel>

    </Grid>
</Window>
